<div>
<%= form_tag("/shops/#{@shop.id}", method: :patch ) do %>

  <label>店舗名</label>
  <input type="text" name="name" value="<%= @shop.name %>" >
  
  <label>掛率</label>
  <input type="text" name="rate" value="<%= @shop.rate %>" >

  <label>販売代行会社コード</label>
  <input type="text" name="company_id" value="<%= @shop.company_id %>" >
  
  <input type="submit" value="SENT" href="/shops">
  <% end %>
</div>
